<Window x:Class="Laba5_Algo.EdgeEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba5_Algo"
        mc:Ignorable="d"
        Title="EdgeCreateWindow" Height="110" Width="210">
    <Grid>
        <TextBox Text="{Binding Path=Input}" Name="Input" HorizontalAlignment="Center" Margin="0,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap" Text="Укажите вес ребра" VerticalAlignment="Top"/>
        <Button Command="{Binding Create}" Content="Ок" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="85"/>
        <Button Command="{Binding Cancel}" Content="Отменить" HorizontalAlignment="Left" Margin="105,50,0,0" VerticalAlignment="Top" Width="85"/>
    </Grid>
</Window>
